<h2>Show post</h2>

<ul>

  <li>
    <strong>Title:</strong>
    <%= @post.title %>
  </li>

  <li>
    <strong>Content:</strong>
    <%= @post.content %>
  </li>

  <li>
    <strong>Author:</strong>
    <%= @post.author %>
  </li>

</ul>

<%= render Teacher.CommentView, "new.hmtl", conn: @conn, post: @post, comment_changeset: @comment_changeset %>

<%= link "Edit", to: post_path(@conn, :edit, @post) %>
<%= link "Back", to: post_path(@conn, :index) %>
